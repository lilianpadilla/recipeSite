
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Add Recipe</title>
    <!-- <link rel="stylesheet" href="/styles.css"> -->
</head>
<body>
    <h1>Add a New Recipe</h1>
    <form action="/recipes/addrecipe" method="POST">
        <label for="name">Recipe Name:</label>
        <input type="text" id="name" name="name" required><br>
        <label for="protein_type">Protein Type:</label>
        <select id="protein_type" name="protein_type">
            <option value="Chicken">Chicken</option>
            <option value="Beef">Beef</option>
            <option value="Pork">Pork</option>
        </select><br>
        <label for="instructions">Instructions</label><br>
        <textarea id="instructions" name="instructions" required></textarea><br>
        <fieldset>
            <legend>Select Ingredients:</legend>
            <% ingredients.forEach(ingredient => { %>
              <label>
                <input type="checkbox" name="ingredients[]" value="<%= ingredient.ingredient_id %>">
                <%= ingredient.name %>
              </label><br>
            <% }) %>
          </fieldset>
          
    
       <!-- <input type="submit" value="Add Recipe"> -->
        <input type="submit" value="Submit">

    </form>
    <h2>
        <a href="/"style="text-decoration: none">Home<br/>
        <a href="/recipes"style="text-decoration: none">Recipe List</a> <br/>
        <a href="/recipes/addrecipe">Add Recipe</a> 
    </h2>
    <script src="/javascripts/script.js"></script>

</body>
</html>
